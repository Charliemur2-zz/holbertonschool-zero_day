#include "holberton.h"
#include <stdlib.h>

/**
 * create_array - create an array
 * @size: size of array
 * @c: char tu include
 * Return: NULL t
 */
char *create_array(unsigned int size, char c)
{
	char *t;

	if (size == 0)
	{
		return ('\0');
	}
	t = malloc(sizeof(char) * (size + 1));

	t[0] = c;
	return (t);
}
